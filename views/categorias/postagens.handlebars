<h1>{{categoria.nome}}</h1>
{{#each postagens}}
<div class="card mt-2">
    <div class="card-body">
        <small>{{data}}</small>
        <hr>
        <h3>{{titulo}}</h3>
        <p>{{descricao}}</p>
        <a href="/postagem/{{slug}}"><button class="btn btn-success">Leia mais</button></a>
    </div>
</div>
{{else}}
<h4>nenhuma postagem</h4>
{{/each}}